<UserControl x:Class="EvoRpg2.Views.UserControls.QuestBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EvoRpg2.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1024">
    <Border BorderThickness="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="20"/>
            </Grid.ColumnDefinitions>

            <Grid.Background>
                <ImageBrush ImageSource="/Resources/Images/questbackground.jpg"/>
            </Grid.Background>

            <Border BorderThickness="5">
                <TextBlock Grid.Column="0" Text="{Binding Quest.QuestName}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" />
            </Border>
        </Grid>
    </Border>
</UserControl>
